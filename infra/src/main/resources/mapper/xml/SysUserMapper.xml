<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mindvoice.psych.infra.mapper.SysUserMapper">
    <select id="findByUsername" parameterType="string" resultMap="userResult">
        SELECT id, username, password, status
        FROM sys_user
        WHERE username = #{username}
    </select>

    <resultMap id="userResult" type="com.mindvoice.psych.infra.domain.SysUser">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <collection property="roles" ofType="com.mindvoice.psych.infra.domain.SysRole"
                    select="findRolesByUserId" column="id"/>
    </resultMap>

    <select id="findRolesByUserId" parameterType="long" resultMap="roleResult">
        SELECT r.id, r.role_name AS roleName
        FROM sys_role r
                 JOIN sys_user_role ur ON ur.role_id = r.id
        WHERE ur.user_id = #{userId}
    </select>

    <resultMap id="roleResult" type="com.mindvoice.psych.infra.domain.SysRole">
        <id property="id" column="id"/>
        <result property="roleName" column="roleName"/>
        <collection property="permissions" ofType="com.mindvoice.psych.infra.domain.SysPermission"
                    select="findPermissionsByRoleId" column="id"/>
    </resultMap>

    <select id="findPermissionsByRoleId" parameterType="long" resultType="com.mindvoice.psych.infra.domain.SysPermission">
        SELECT p.id, p.permission_name AS permissionName, p.permission_code AS permissionCode
        FROM sys_permission p
                 JOIN sys_role_permission rp ON rp.permission_id = p.id
        WHERE rp.role_id = #{roleId}
    </select>
</mapper>
